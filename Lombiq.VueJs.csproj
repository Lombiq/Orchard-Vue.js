<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="node_modules\**" />
    <EmbeddedResource Remove="node_modules\**" />
    <None Remove="node_modules\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove=".gitattributes" />
    <EmbeddedResource Remove=".gitignore" />
    <EmbeddedResource Remove=".hgignore" />
    <EmbeddedResource Remove="Gulpfile.babel.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.0.0-beta3-71370" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0-beta3-71370" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.0.0-beta3-71370" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Gulpfile.babel.js">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>
  
  <Target Name="NpmInstall" BeforeTargets="BeforeBuild">
    <Exec Command="npm install" />
    <Exec Command="gulp" />
  </Target>

</Project>
